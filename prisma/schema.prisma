generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id           Int      @id @default(autoincrement())
  name         String
  nis          String   @unique
  birth_date   DateTime?
  gender       String   // L atau P
  is_alumni    Boolean?
  nik          String?   @unique
  kk           String?
  father_name  String?
  mother_name  String?
  father_job   String?
  mother_job   String?
  origin_school String?
  nisn         String?   @unique
  birth_place  String?
  created_at   DateTime? @default(now())
  updated_at   DateTime? @updatedAt
  qr_token     String?   @unique
}

enum Role {
  ADMIN
  GURU
  STAF
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  avatar     String?
  role       Role     @default(ADMIN)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
